@model KnowledgeBase.Logic.Dto.ReportProjectIssueDto;
@using KnowledgeBase.Data.Models.Enums;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using (Html.BeginForm("AddReport", "Project", new { id = ViewBag.ProjectId }, FormMethod.Post, true, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        @Html.LabelFor(report => report.Title, new { @class = "form-label" })
        @Html.TextBoxFor(report => report.Title, new {@class = "form-control"})
        @Html.ValidationMessageFor(report => report.Title)
    </div>
    <div class="mb-3">
        @Html.LabelFor(report => report.Description, new { @class = "form-label" })
        @Html.TextBoxFor(report => report.Description, new {@class = "form-control"})
        @Html.ValidationMessageFor(report => report.Description)
    </div>
    <div class="mb-3">
        <label class="form-label">Issue type</label>
        <select name="type" id="type" class="form-select">
            <option value="@ReportProjectIssuesTypes.Info">Info</option>
            <option value ="@ReportProjectIssuesTypes.BugReport">Bug</option>
            <option value="@ReportProjectIssuesTypes.Help">Help</option>
        </select>
    </div>

    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
}