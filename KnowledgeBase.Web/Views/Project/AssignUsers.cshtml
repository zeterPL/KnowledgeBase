@using KnowledgeBase.Logic.ViewModels;
@{
    List<AssignUserToProjectViewModel> users = Model;
}
@using (Html.BeginForm("AssignUsers", "Project", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Choose permissions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AssignUserToProjectViewModel user in users)
            {
                <tr>
                    <td>@Html.CheckBox(@user.IsAssigned.ToString(), false ,new {@checked = "checked"})</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                </tr>
            }          
        </tbody>
    </table>

    <input type="submit"/>
}
