@model KnowledgeBase.Logic.Dto.Project.ProjectDto;
@{
}
@using (Html.BeginForm("FilteredProjects", "Project", FormMethod.Post))
{
@Html.AntiForgeryToken()
<div>
        Enter name, description on Onetag name<br />
        @Html.EditorFor(Model => Model.Name)
        @Html.ValidationMessageFor(Model => Model.Name)

        <br />
        <br />
        Start Date:<br />
        <input class="form-control" asp-for="DateFrom" asp-format="{0:yyyy-MM-dd}" />
        <br />
        <br />

        End Date:
        <br />
        <input class="form-control" asp-for="DateTo" />
        <br />
        <br />

        Enter the name of the tag, separating it with a space<br />
        <textarea cols="20" id="Description" name="TagsName" rows="2"></textarea>
        <a asp-route="FilteredProjects"><input type="submit" value="Find Projects" /></a>
    </div>
}
