﻿@using KnowledgeBase.Logic.Dto.Project;
@model IEnumerable<ProjectDto>
@{
    IEnumerable<ProjectDto> projects = Model;
}
<a asp-action="List" class="btn btn-primary">Go back to list</a> |
<a asp-action="FindProjects" class="btn btn-secondary">Find Another Projects By Name</a>
<table class="table">
	<tr>
		<th>Name</th>
		<th>Date Of Creation</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>

	@foreach (ProjectDto project in projects)
	{
		<tr>
			<td>@project.Name</td>
			<td>@project.StartDate</td>
			<td>@project.Description</td>
			<td>
				<a asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary">Details</a>
				<a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-primary">Edit</a>
				<a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger">Delete</a>
				<a asp-action="AssignUsers" asp-route-id="@project.Id" class="btn btn-secondary">Assign users</a>
				<a asp-action="ReportsList" asp-route-id="@project.Id" class="btn btn-warning">Reported issues</a>
			</td>
		</tr>
	}
</table>

  
