@using KnowledgeBase.Logic.Dto.Project;
@model IEnumerable<ProjectDto>
@{
    IEnumerable<ProjectDto> projects = Model;
}
<table style="border: 1px solid black">
	<tr>
	   <th>Id</th>
	   <th>Name</th>
	   <th>Date Of Creation</th>
	   <th>Description</th>
		<th>details</th>
		<th>edit</th>
		<th>delete</th>
		<th>Assign users</th>

	</tr>


	@foreach (ProjectDto project in projects)
	{
		<tr>
			<td>@project.Id</td>
			<td>@project.Name</td>
			<td>@project.StartDate</td>
			<td>@project.Description</td>
			<td><a asp-action="Details" asp-route-id="@project.Id">details</a></td>
			<td><a asp-action="Edit" asp-route-id="@project.Id">edit</a></td>
			<td><a asp-action="Delete" asp-route-id="@project.Id">delete</a></td>
			<td><a asp-action="AssignUsers" asp-route-id="@project.Id">Assign users</a></td>
        
		</tr>
	}
</table>

    <div>
	<a asp-action="FindProjects">Filter Projects</a>
    </div>