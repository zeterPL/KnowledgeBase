@using KnowledgeBase.Logic.Dto
@{
    List<TagDto> tags = Model;
}
<div>
    <a asp-action="AddTags" asp-route-id="@ViewBag.projectId">Add tags to project</a>

    @foreach (TagDto tag in tags)
    {
        <div>@tag.Name <a asp-action="DeleteTag" asp-route-TagId="@tag.Id" asp-route-ProjectId="@ViewBag.ProjectId" class="btn btn-danger">Delete</a> </div>
    }
</div>
