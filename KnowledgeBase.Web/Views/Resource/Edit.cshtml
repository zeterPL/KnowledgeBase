@using KnowledgeBase.Data.Models.Enums;
@model KnowledgeBase.Logic.Dto.ResourceDto

@using (Html.BeginForm("Edit", "Resource", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(resource => resource.Name)
        @Html.EditorFor(resource => resource.Name)
        @Html.ValidationMessageFor(resource => resource.Name)
    </div>
    <div>
        @Html.LabelFor(resource => resource.Description)
        @Html.EditorFor(resource => resource.Description)
        @Html.ValidationMessageFor(resource => resource.Description)
    </div>
    <div>
        @Html.LabelFor(resource => resource.Category)
        @Html.DropDownListFor(resource => resource.Category, Html.GetEnumSelectList<ResourceCategory>())
        @Html.ValidationMessageFor(resource => resource.Category)
    </div>
    <div>
        @Html.TextBox("file", "", new { type = "file" })
    </div>
    <div>
        <input type="submit" value="Save" />
    </div>
}